<div class="col-12 col-lg-3 col-md-4 m-3 shadow" style="position: relative; height: fit-content;">
   {{#if (eq @root.userid this.user._id)}}
      <a class="bg-primary d-flex justify-content-center align-items-center"
         style="height: 2rem; width: 2rem; border-radius: 50%;position: absolute; top:-0.5rem; right: -0.5rem; z-index: 10; color: white;"
         href="/blog/edit/{{this._id}}">{{>edit}}</a>
   {{/if}}
   <div class="card border-0">
      <img src="{{this.image}}" class="card-img-top" style="height: 10rem; object-fit: cover;"
         alt="Hollywood Sign on The Hill" />
      <div class="card-body">
         <a 
            href="/users/{{this.user._id}}" 
            class="d-flex align-items-center justify-content-start text-decoration-none text-secondary"
         >
            <img 
               src="{{@root.diceBear}}{{this.user.profilePicture}}.svg" 
               class="rounded-circle img-fluid shadow"
               style="width: 50px;" 
               alt=""
            >
            <span class="lead">{{this.user.name}}</span>
         </a>
         <h4 class="card-title" style="color: black;">{{this.title}}</h4>
         <p class="card-text" style="color: black;">
            {{{formatBody this.body}}}
         </p>
         <a href="/blog/{{this._id}}" class="btn btn-primary">Read More</a>
      </div>
   </div>
</div>