<div class="d-flex justify-content-between align-items-center flex-wrap w-100">
   {{#each users}}
      <div class="card mb-4 col-12 col-lg-3 col-md-4 m-3 shadow">
         <div class="card-body text-center">
            <img
               src="{{@root.diceBear}}{{this.profilePicture}}.svg"
               alt="avatar"
               class="rounded-circle img-fluid"
               style="width: 150px;"
            />
            <h5 class="my-3">{{this.name}}</h5>
            <p class="text-muted mb-4">{{this.email}}</p>
            <div class="d-flex justify-content-center mb-2">
               <a href="/users/{{this._id}}" class="btn btn-primary">Profile</a>
            </div>
         </div>
      </div>
   {{/each}}
</div>
{{>add}}